local infoLabel = Instance.new("TextLabel")
infoLabel.Size = UDim2.new(1, -20, 0, 90)
infoLabel.Position = UDim2.new(0, 10, 0, 105)
infoLabel.BackgroundTransparency = 1
infoLabel.Text = "âš¡ COMPLETE INVISIBILITY\n\nâœ… Hides ALL body parts\nâœ… Hides username display\nâœ… Hides accessories\nâœ… Tools still work!"
infoLabel.Font = Enum.Font.Gotham
infoLabel.TextSize = 10
