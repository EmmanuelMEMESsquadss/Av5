	local entry = Instance.new("Frame")
	entry.Size = UDim2.new(1, -10, 0, 58)
	entry.BackgroundColor3 = Color3.fromRGB(28, 28, 38)
	entry.BorderSizePixel = 0
	entry.ZIndex = 7
	entry.Parent = locScroll
	
	local entryCorner = Instance.new("UICorner")
