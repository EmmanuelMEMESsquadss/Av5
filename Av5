-- Dragging
local dragging, miniDragging = false, false
local dragStart, startPos, miniDragStart, miniStartPos

dragHandle.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = mainFrame.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then dragging = false end
		end)
	end
end)

dragHandle.InputChanged:Connect(function(input)
	if (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) and dragging then
		local delta = input.Position - dragStart
		mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
	end
end)

miniBtn.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		miniDragging = true
		miniDragStart = input.Position
		miniStartPos = miniBtn.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then miniDragging = false end
		end)
	end
end)

miniBtn.InputChanged:Connect(function(input)
	if (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) and miniDragging then
		local delta = input.Position - miniDragStart
		miniBtn.Position = UDim2.new(miniStartPos.X.Scale, miniStartPos.X.Offset + delta.X, miniStartPos.Y.Scale, miniStartPos.Y.Offset + delta.Y)
	end
end)

minimizeBtn.Activated:Connect(function()
	TweenService:Create(mainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.In), {Size = UDim2.new(0, 0, 0, 0)}):Play()
	task.wait(0.3)
	mainFrame.Visible = false
	miniBtn.Visible = true
	miniBtn.Size = UDim2.new(0, 0, 0, 0)
	TweenService:Create(miniBtn, TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Size = UDim2.new(0, 50, 0, 50)}):Play()
end)

miniBtn.Activated:Connect(function()
	if not miniDragging then
		TweenService:Create(miniBtn, TweenInfo.new(0.2, Enum.EasingStyle.Back, Enum.EasingDirection.In), {Size = UDim2.new(0, 0, 0, 0)}):Play()
		task.wait(0.2)
		miniBtn.Visible = false
		mainFrame.Visible = true
		mainFrame.Size = UDim2.new(0, 0, 0, 0)
		TweenService:Create(mainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Size = UDim2.new(0, 200, 0, 420)}):Play()
	end
end)

-- ACTUAL WORKING INVISIBILITY METHODS
local storedHead = nil
local invisConnection = nil
local invisSeat = nil
local flingPart = nil

-- METHOD 1: HEADLESS (Delete Head - Most Universal!)
function applyHeadless()
	if not character then return end
	
	local head = character:FindFirstChild("Head")
	if head then
		-- Store head for restoration
		storedHead = head:Clone()
		
		-- Delete head (makes character invisible in most games!)
		head:Destroy()
		
		statusLabel.Text = "Status: ACTIVE ‚úÖ\nMethod: HEADLESS\n\n‚úÖ Head deleted!\nTools still work!"
	end
end

-- METHOD 2: SEAT WELD (Weld to invisible seat)
function applySeatWeld()
	if not character or not hrp then return end
	
	-- Create invisible seat
	invisSeat = Instance.new("Seat")
	invisSeat.Name = "InvisSeat"
	invisSeat.Anchored = false
	invisSeat.CanCollide = false
	invisSeat.Transparency = 1
	invisSeat.Size = Vector3.new(0.1, 0.1, 0.1)
	invisSeat.CFrame = hrp.CFrame
	invisSeat.Parent = workspace
	
	-- Sit character on seat
	humanoid.Sit = true
	task.wait(0.1)
	invisSeat.CFrame = CFrame.new(0, -1000, 0)
	
	statusLabel.Text = "Status: ACTIVE ‚úÖ\nMethod: SEAT WELD\n\n‚úÖ Welded to invisible seat!\nTools still work!"
end

-- METHOD 3: FLING (Constant spinning - physics exploit)
function applyFling()
	if not character or not hrp then return end
	
	-- Create spinning part
	flingPart = Instance.new("BodyAngularVelocity")
	flingPart.AngularVelocity = Vector3.new(0, 99999, 0)
	flingPart.MaxTorque = Vector3.new(0, math.huge, 0)
	flingPart.P = math.huge
	flingPart.Parent = hrp
	
	-- Make character spin SO fast they're invisible
	invisConnection = RunService.Heartbeat:Connect(function()
		if flingPart and flingPart.Parent then
			flingPart.AngularVelocity = Vector3.new(0, 99999, 0)
		end
	end)
	
	statusLabel.Text = "Status: ACTIVE ‚úÖ\nMethod: FLING\n\n‚úÖ Spinning at max speed!\nTools still work!"
end

-- METHOD 4: KORBLOX (Remove limbs - R15 specific)
function applyKorblox()
	if not character then return end
	
	-- Delete all limbs except torso and head
	local limbs = {"LeftUpperArm", "LeftLowerArm", "LeftHand", "RightUpperArm", "RightLowerArm", "RightHand",
		"LeftUpperLeg", "LeftLowerLeg", "LeftFoot", "RightUpperLeg", "RightLowerLeg", "RightFoot",
		"Left Arm", "Right Arm", "Left Leg", "Right Leg"} -- R6 + R15
	
	for _, limbName in ipairs(limbs) do
		local limb = character:FindFirstChild(limbName)
		if limb then
			limb:Destroy()
		end
	end
	
	statusLabel.Text = "Status: ACTIVE ‚úÖ\nMethod: KORBLOX\n\n‚úÖ Limbs removed!\nTools still work!"
end

-- METHOD 5: TOOL INVIS (Use tool handle position)
function applyToolInvis()
	if not character or not hrp then return end
	
	-- Get equipped tool
	local tool = character:FindFirstChildOfClass("Tool")
	
	if tool and tool:FindFirstChild("Handle") then
		local handle = tool.Handle
		
		-- Weld character to tool handle offscreen
		local weld = Instance.new("Weld")
		weld.Part0 = hrp
		weld.Part1 = handle
		weld.C0 = CFrame.new(0, -1000, 0)
		weld.Parent = hrp
		
		-- Make handle invisible
		handle.Transparency = 1
		
		statusLabel.Text = "Status: ACTIVE ‚úÖ\nMethod: TOOL INVIS\n\n‚úÖ Welded to tool!\nTools still work!"
	else
		statusLabel.Text = "Status: FAILED ‚ùå\nMethod: TOOL INVIS\n\n‚ùå No tool equipped!\nEquip a tool first!"
	end
end

function enableInvisibility()
	if not character then return end
	
	if currentMethod == "headless" then
		applyHeadless()
	elseif currentMethod == "seatweld" then
		applySeatWeld()
	elseif currentMethod == "fling" then
		applyFling()
	elseif currentMethod == "korblox" then
		applyKorblox()
	elseif currentMethod == "toolinvis" then
		applyToolInvis()
	end
end

function disableInvisibility()
	-- Restore head
	if storedHead and character then
		local newHead = storedHead:Clone()
		newHead.Parent = character
		storedHead = nil
	end
	
	-- Remove seat
	if invisSeat then
		invisSeat:Destroy()
		invisSeat = nil
	end
	
	-- Remove fling
	if flingPart then
		flingPart:Destroy()
		flingPart = nil
	end
	
	-- Disconnect connection
	if invisConnection then
		invisConnection:Disconnect()
		invisConnection = nil
	end
	
	-- Unsit humanoid
	if humanoid then
		humanoid.Sit = false
	end
	
	statusLabel.Text = "Status: Ready\nMethod: " .. currentMethod:upper() .. "\n\nüí° Try each method!\nSome work in specific games"
end

-- Main Toggle
toggleBtn.Activated:Connect(function()
	invisEnabled = not invisEnabled
	
	if invisEnabled then
		toggleBtn.Text = "üëª ENABLED"
		toggleBtn.BackgroundColor3 = Color3.fromRGB(150, 100, 255)
		statusDot.BackgroundColor3 = Color3.fromRGB(150, 100, 255)
		enableInvisibility()
	else
		toggleBtn.Text = "üëª DISABLED"
		toggleBtn.BackgroundColor3 = Color3.fromRGB(255, 80, 80)
		statusDot.BackgroundColor3 = Color3.fromRGB(255, 80, 80)
		disableInvisibility()
	end
end)

